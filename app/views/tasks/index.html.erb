<h1>My tasks</h1>

<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item border-0">
      [<%= task.completed? ? "X" : " " %>]
      <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>

<hr>

<%= link_to new_task_path do %>
  <strong>+</strong> Add a new task
<% end %>
