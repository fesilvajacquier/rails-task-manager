<h1>My tasks</h1>

<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item border-0">
      [<%= task.completed? ? "X" : " " %>]
      <%= link_to task.title, task_path(task) %>
      -
      <%= link_to task_path(task), method: :delete do %>
        <strong>X</strong>
      <% end %>
    </li>
  <% end %>
</ul>

<hr>

<%= link_to new_task_path do %>
  <strong>+</strong> Add a new task
<% end %>
